                        "files": {
                            "/usr/bin/gpfs-compute-setup.sh": {
                                "content": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "#!/bin/bash\n",
                                            "export JAVA_HOME=/usr\n",
                                            "export EC2_HOME=/root/ec2-api-tools-1.7.5.1\n",
                                            "export EC2_URL=https://ec2.",
                                            {
                                                "Ref": "AWS::Region"
                                            },
                                            ".amazonaws.com\n",
                                            "PATH=$PATH:$HOME/bin\n",
                                            "export PATH=$PATH:/usr/lpp/mmfs/bin:$EC2_HOME/bin\n",
                                            "export PATH\n",
                                            "\n",
                                            "ServerNodeCount=",
