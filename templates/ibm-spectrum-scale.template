                                            "   exit \n",
                                            "else\n",
                                            "   sleep 20\n",
                                            "   /usr/lpp/mmfs/bin/mmlsdisk fs1 -L\n",
                                            "fi\n",
                                            "echo --DONE--\n"
                                        ]
                                    ]
