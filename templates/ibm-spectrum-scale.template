                                            "    echo servers=$quorum_only_host; \n",
                                            "    echo usage=descOnly; \n",
                                            "    echo failureGroup=1; \n",
                                            "    echo pool=system; \n",
                                            "    echo ' '; } >> /var/log/nsdFile\n",
                                            "if [ $? == 1 ];\n",
                                            "then\n",
                                            "   exit\n",
                                            "fi\n",
                                            "echo = GPFS NSD description file =\n",
                                            "echo `cat /var/log/nsdFile`\n",
                                            "echo = end =\n",
